<footer class="covidtest-footer padding-top-4 border-top border-gray">
  <div class="covidtest-footer__container covidtest-container">
    <div class="covidtest-footer__logos">
      <a class="covidtest-footer__logo-link covidtest-footer__logo-link--hhs" href="https://www.hhs.gov/" rel="noopener">
        <%= image_tag("covidtest/hhs-logo.png", alt: t('shared.footer.links.hhs'), width: "146", height: "151", loading: "lazy", class: "covidtest-footer__logo-img") %>
      </a>
      <a class="covidtest-footer__logo-link" href="https://wecandothis.hhs.gov/" rel="noopener">
        <%= image_tag("covidtest/wecandothis-logo-#{I18n.locale || I18n.default_locale}.svg", alt: t('shared.footer.links.covid'), width: "155", height: "155", loading: "lazy", class: "covidtest-footer__logo-img") %>
      </a>
      <a class="covidtest-footer__logo-link" href="https://www.usps.com/" rel="noreferrer noopener">
        <%= image_tag("covidtest/usps-logo.svg", alt: t('shared.footer.links.usps'), width: "288", height: "144", loading: "lazy", class: "covidtest-footer__logo-img") %>
      </a>
    </div>
  </div>
</footer>
